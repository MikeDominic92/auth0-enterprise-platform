{
  "name": "auth0-enterprise-platform",
  "version": "1.0.0",
  "description": "Enterprise-grade authentication and authorization platform built on Auth0 with multi-tenant support, RBAC, and comprehensive audit logging",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "nodemon --watch src --ext js,json src/index.js",
    "start": "node src/index.js",
    "build": "npm run lint && npm run test",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage --detectOpenHandles",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage --ci --reporters=default --reporters=jest-junit",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write 'src/**/*.{js,json}'",
    "format:check": "prettier --check 'src/**/*.{js,json}'",
    "migrate": "node scripts/migrate.js",
    "migrate:up": "node scripts/migrate.js up",
    "migrate:down": "node scripts/migrate.js down",
    "migrate:status": "node scripts/migrate.js status",
    "seed": "node scripts/seed.js",
    "db:reset": "node scripts/db-reset.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "health": "curl -s http://localhost:3000/health | jq",
    "audit:deps": "npm audit --production",
    "prepare": "husky install"
  },
  "keywords": [
    "auth0",
    "authentication",
    "authorization",
    "enterprise",
    "multi-tenant",
    "rbac",
    "sso",
    "oauth2",
    "openid-connect",
    "security"
  ],
  "author": "Enterprise Platform Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/organization/auth0-enterprise-platform.git"
  },
  "bugs": {
    "url": "https://github.com/organization/auth0-enterprise-platform/issues"
  },
  "homepage": "https://github.com/organization/auth0-enterprise-platform#readme",
  "dependencies": {
    "auth0": "^4.3.0",
    "express": "^4.21.0",
    "express-oauth2-jwt-bearer": "^1.6.0",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.2.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "pg": "^8.12.0",
    "pg-pool": "^3.6.0",
    "redis": "^4.7.0",
    "ioredis": "^5.4.1",
    "winston": "^3.14.0",
    "winston-daily-rotate-file": "^5.0.0",
    "morgan": "^1.10.0",
    "uuid": "^10.0.0",
    "dotenv": "^16.4.5",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.2.0",
    "axios": "^1.7.7",
    "lodash": "^4.17.21",
    "date-fns": "^3.6.0",
    "cron": "^3.1.7",
    "bull": "^4.16.0",
    "prom-client": "^15.1.3",
    "response-time": "^2.3.2",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.4",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "supertest": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "prettier": "^3.3.3",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "@faker-js/faker": "^8.4.1",
    "nock": "^13.5.4",
    "testcontainers": "^10.11.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "testTimeout": 30000
  }
}
